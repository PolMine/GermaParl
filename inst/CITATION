citHeader(
    "The 'GermaParl' R package and the 'GermaParl' corpus are two different pieces of research data, ",
    "with different version numbers, document object identifiers (DOIs) and recommendations for quotation. ",
    "If you use GermaParl for your research, maximum transparency on the tools you used is attained, ",
    "when both the package and the corpus is quoted in your publication. To ensure the reproducibility",
    "of your research, it is more important to refer to and specify the corpus (including version, DOI) ",
    "you used."
)

citEntry(entry = "Manual",
         title = "GermaParl R Data Package ",
         author = person("Andreas", "Blaette", email = "andreas.blaette@uni-due.de"),
         year = format(as.Date(packageDescription("GermaParl")[["Date"]]), "%Y"),
         note = packageVersion("GermaParl"),
         url = "https://CRAN.R-project.org/package=GermaParl",
         textVersion = sprintf(
           "Blaette, Andreas (%s): GermaParl R Data Package. v%s. %s", 
           format(as.Date(packageDescription("GermaParl")[["Date"]]), "%Y"),
           packageVersion("GermaParl"),
           "https://CRAN.R-project.org/package=GermaParl"
         )
)

if (GermaParl::germaparl_is_installed()){
  citEntry(entry = "Misc",
         title = "GermaParl CWB Corpus",
         author = person("Andreas", "Blaette", email = "andreas.blaette@uni-due.de"),
         year = "2020",
         note = GermaParl::germaparl_get_version(),
         url = GermaParl::germaparl_get_doi(),
         textVersion = sprintf(
           "Blaette, Andreas (%s): GermaParl CWB Corpus (%s). %s", 
           format(Sys.time(), "%Y"),
           GermaParl::germaparl_get_version(),
           GermaParl::germaparl_get_doi()
         )
  )
}
