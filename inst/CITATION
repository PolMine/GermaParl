citHeader(
    "The 'GermaParl' R package and the 'GermaParl' corpus are two different pieces of research data, ",
    "with different version numbers, document object identifiers (DOIs), licenses and recommendations for quotation. ",
    "If you use GermaParl for your research, maximum transparency on the tools you used is attained, ",
    "when both the package and the corpus are quoted in your publication. To ensure the reproducibility",
    "of your research, it is more important to refer to and specify the corpus (including version, DOI) ",
    "you used. Note that the GermaParl R package uses the GPL-3 license as a standard license for open ",
    "source software. The license of the GermaParl corpus is the Creative Commons Attibution ShareAlike 4.0 ",
    "(CC BY-SA 4.0), which is common for data and makes the expectation that the data is quoted explicit."
)

citEntry(entry = "Manual",
         title = "GermaParl R Data Package ",
         author = person("Andreas", "Blaette", email = "andreas.blaette@uni-due.de"),
         year = "2020",
         note = "R package version 1.3.0",
         url = "https://CRAN.R-project.org/package=GermaParl",
         textVersion = "Blaette, Andreas (2020): GermaParl R Data Package. v1.3.0. https://CRAN.R-project.org/package=GermaParl"
)

if (requireNamespace("GermaParl", quietly = TRUE)){
  if (GermaParl::germaparl_is_installed()){
    citEntry(entry = "Misc",
        title = "GermaParl CWB Corpus",
         author = person("Andreas", "Blaette", email = "andreas.blaette@uni-due.de"),
         year = "2020",
         note = GermaParl::germaparl_get_version(),
         url = GermaParl::germaparl_get_doi(),
         textVersion = sprintf(
           "Blaette, Andreas (%s): GermaParl CWB Corpus (%s). %s", 
           format(Sys.time(), "%Y"),
           GermaParl::germaparl_get_version(),
           GermaParl::germaparl_get_doi()
         )
    )
  }
}
